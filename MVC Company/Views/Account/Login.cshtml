
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/Auth_Layout.cshtml";
}
@model LoginDto
<div asp-validation-summary="All"></div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action= "Login">
			
			<input class="text" asp-for="Email" placeholder="Email" required="" >
			<span asp-validation-for="Email"></span>
			<input class="text" asp-for="Password" placeholder="Password" required="" >
			<span asp-validation-for="Password"></span>
			
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="Login">
		</form>
		<p>Don't'have an Account? <a asp-action="Register"> SignUp Now!</a></p>
	</div>
</div>
@section validationScript {
	<partial name="_ValidationScriptPartial">
}

