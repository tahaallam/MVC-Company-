@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

@* <div class="alert alert-primary">
    @ViewData["Message"];
</div> *@
@* <div class="alert alert-info">
    @ViewBag.Message ;
</div> *@
<h1>All Employees</h1>

<div class="row justify-content-center align-items-center mt-5">
    <form class="row col-8 offset-2 " asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="SearchInp" placeholder="Search By Name" />
        </div>
        <div class="col-8">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>


<a asp-action="Create" class="btn btn-success">Add New Employee</a>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered table-hover mt-3" style="text-align:center">
        <thead>
            <tr>
                <td> @Html.DisplayNameFor(D => D.Name)</td>
                <td> @Html.DisplayNameFor(D => D.Address)</td>
                <td> @Html.DisplayNameFor(D => D.Age)</td>
                <td> @Html.DisplayNameFor(D => D.PhoneNumber)</td>
                <td> @Html.DisplayNameFor(D => D.Email)</td>
                <td> @Html.DisplayNameFor(D => D.Salary)</td>
               @*  <td> @Html.DisplayNameFor(D => D.Department)</td> *@
                <td> @Html.DisplayNameFor(D => D.CreatedAt)</td>
                <td> @Html.DisplayNameFor(D => D.HiringDate)</td>
               @*  <td> @Html.DisplayNameFor(D => D.IsDeleted)</td> *@
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td> @employee.Name</td>
                    <td> @employee.Address</td>
                    <td> @employee.Age</td>
                    <td> @employee.PhoneNumber</td>
                    <td> @Html.DisplayFor(E => employee.Email)</td>
                    <td> @Html.DisplayFor(E => employee.Salary)</td>
                    @* <td> @Html.DisplayFor(E => employee.Department.Name)</td> *@
                    <td> @employee.CreatedAt</td>
                    <td> @employee.HiringDate</td>
                    @* <td>
                        @if (employee.IsDeleted == false)
                        {
                            <i class="fa-solid fa-circle" style="color:green"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle" style="color:red"></i>
                        }
                    </td> *@
                    <partial name="_ButtonPartialView" model="@employee.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h3 class="mt-3 alert-danger">There Is No Employee</h3>
    </div>
}


