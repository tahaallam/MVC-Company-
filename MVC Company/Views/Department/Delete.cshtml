@model DepartmentDto
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete @Model.Name Department</h1>
<form asp-action="Delete">
    <div>
        <label class="col-form-label" asp-for="Code"></label>
        <input readonly class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="Name"></label>
        <input readonly class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
     <div>
    <label class="col-form-label" asp-for="CreatedAt"></label>
    <input readonly class="form-control" asp-for="CreatedAt" />
    <span asp-validation-for="CreatedAt" class="text-danger"></span>
    </div>
    <input type="submit" value="Delete" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Cancel</a>
</form>
